<Window x:Class="PRN212_HairHarmony.ViewComissionRate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PRN212_HairHarmony"
        mc:Ignorable="d"
        Title="ViewComissionRate" Height="450" Width="800">
    <Grid Background="#FFD5EFCD">
        <TextBlock HorizontalAlignment="Center" Height="36" Margin="0,21,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="416" TextAlignment="Center" FontSize="24" FontWeight="Bold"><Run Text="View your service"/><LineBreak/><Run/></TextBlock>
        <Button x:Name="btnLogout1" Content="📲" HorizontalAlignment="Left" Margin="639,10,0,0" VerticalAlignment="Top" Height="42" Width="48" Background="#FF72B359" FontSize="22" FontWeight="Bold"  Foreground="White" Click="btnLogout_Click" >
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Button x:Name="btnClose1" Content="❌" HorizontalAlignment="Left" Margin="727,10,0,0" VerticalAlignment="Top" Height="42" Width="47" Background="#FF72B359" FontSize="22" FontWeight="Bold"  Foreground="White" Click="btnClose_Click">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Button x:Name="btnReload" Content="🔃" HorizontalAlignment="Left" Margin="116,10,0,0" VerticalAlignment="Top" Height="42" Width="48" Background="#FF72B359" FontSize="22" FontWeight="Bold"  Foreground="White" Click="btnReload_Click">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Button x:Name="btnBack1" Content="⬅️" HorizontalAlignment="Left" Margin="27,10,0,0" VerticalAlignment="Top" Height="42" Width="47" Background="#FF72B359" FontSize="22" FontWeight="Bold"  Foreground="White" Click="btnBack_Click">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <DataGrid x:Name="dtgService" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="27,90,416,95" SelectionChanged="DataGrid_SelectionChanged"/>
        <TextBox x:Name="txtServiceID" HorizontalAlignment="Left" Height="41" Margin="496,111,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="280" FontSize="16"/>
        <Label Content="Service ID" HorizontalAlignment="Left" Height="41" Margin="446,70,0,0" VerticalAlignment="Top" Width="99" FontWeight="Bold" FontSize="14"/>
        <Label Content="Commission Rate" HorizontalAlignment="Left" Height="41" Margin="446,174,0,0" VerticalAlignment="Top" Width="130" FontWeight="Bold" FontSize="14"/>
        <TextBox x:Name="txtComission" HorizontalAlignment="Left" Height="41" Margin="496,220,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="280" FontSize="16"/>
        <Label Content="Status" HorizontalAlignment="Left" Height="41" Margin="446,276,0,0" VerticalAlignment="Top" Width="130" FontWeight="Bold" FontSize="14"/>
        <CheckBox x:Name="ckbRate" Content="Selected " HorizontalAlignment="Left" Height="34" Margin="496,323,0,0" VerticalAlignment="Top" Width="276" FontSize="16"/>
        <Button x:Name="btnAddService" HorizontalAlignment="Left" Margin="73,366,0,0" VerticalAlignment="Top" Height="38" Width="169" Background="#FF72B359" FontSize="20" FontWeight="Bold"  Foreground="White" Content="Add service" Click="btnAddService_Click" >
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Button x:Name="btnEnableService" HorizontalAlignment="Left" Margin="300,366,0,0" VerticalAlignment="Top" Height="38" Width="181" Background="#FF72B359" FontSize="20" FontWeight="Bold"  Foreground="White" Content="Enable" >
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Button x:Name="btnDisable" HorizontalAlignment="Left" Margin="570,366,0,0" VerticalAlignment="Top" Height="38" Width="180" Background="#FF72B359" FontSize="20" FontWeight="Bold"  Foreground="White" Content="Disable" >
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
    </Grid>
</Window>
